<%= simple_form_for @client do |form| %>
  <%= form.input :type, as: :boolean, boolean_style: :inline %>
  <%= form.input :name %>
  <%= form.input :surname %>
  <%= form.input :address %>
  <%= form.input :cap %>
  <%= form.input :city %>
  <%= form.input(:country, as: :country, priority_countries: ["IT"]) %>
  <%= form.input :ssn %>
  <%= form.button :submit %>
<% end %>
