<!-- Client new Section -->
<section class="lateral-separator top-separator" id="contact">
  <div class="container">
    <h2 class="text-center">New Client</h2>
    <hr class="star-primary">
    <div class="row">
      <div class="col-lg-12 mx-auto">
        <% flash.each do |key, value| %>
          <div class="<%= flash_class(key) %>">
            <%= value %>
          </div>
        <% end %>
        <%= render 'form', client: @client %>
        <%= link_to 'Back', clients_path, class: "btn btn-secondary btn-block" %>
      </div>
    </div>
  </div>
</section>
