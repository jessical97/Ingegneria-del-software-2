<!-- Show Bills Section -->
<section class="lateral-separator top-separator" id="contact">
  <div class="container">
    <h2 class="text-center">Bill</h2>
    <hr class="star-primary">
    <div class="row">
      <div class="col-lg-12 mx-auto">
        <% flash.each do |key, value| %>
          <div class="<%= flash_class(key) %>">
            <%= value %>
          </div>
        <% end %>
        <ul class="list-group">
          <li class="list-group-item">
            <p>
              <strong>Import:</strong>
              <%= @bill.import %>
            </p>
          </li>
          <li class="list-group-item">
            <p>
              <strong>Client:</strong>
              <%= @bill.client.name %>
            </p>
          </li>
        </ul>
        <%= link_to 'Show PDF', bill_path(@bill, format: :pdf), class: "btn btn-primary btn-block", target: "_blank" %>
        <%= link_to 'Edit', edit_bill_path(@bill), class: "btn btn-primary btn-block" %>
        <%= link_to 'Back', bills_path, class: "btn btn-secondary btn-block" %>
      </div>
    </div>
    <br>
    </div>
  </div>
</section>
