<!-- Bill Section -->
<section class="lateral-separator top-separator" id="contact">
  <div class="container">
    <h2 class="text-center">Bills</h2>
    <hr class="star-primary">
    <div class="row">
      <div class="col-lg-12 mx-auto">
        <div class="container-fluid">
          <% flash.each do |key, value| %>
            <div class="<%= flash_class(key) %>">
              <%= value %>
            </div>
          <% end %>
          <%= link_to 'New Bill', new_bill_path, :class => "btn btn-block btn-primary" %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Import</th>
                <th>Client</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @bills.each do |bill| %>
                <tr>
                  <td><%= bill.import %> &euro;</td>
                  <td><%= bill.client.name %></td>
                  <td><%= link_to 'Show', bill %></td>
                  <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br>
      </div>
    </div>
  </div>
</section>
