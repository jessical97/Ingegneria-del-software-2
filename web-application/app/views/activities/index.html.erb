<!-- Bill Section -->
<section class="lateral-separator top-separator" id="contact">
  <div class="container">
    <h2 class="text-center">Activities</h2>
    <hr class="star-primary">
    <div class="row">
      <div class="col-lg-12 mx-auto">
        <div class="container-fluid">
          <% flash.each do |key, value| %>
            <div class="<%= flash_class(key) %>">
              <%= value %>
            </div>
          <% end %>
          <%= link_to 'New Activity', new_activity_path, class: "btn btn-primary btn-block"%>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Hours</th>
                <th>Client</th>
                <th>Registered At:</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @activities.each do |activity| %>
                <tr>
                  <td><%= activity.hours %></td>
                  <td><%= @clients_names[activity.client_id] %></td>
                  <td><%= I18n.l activity.created_at.to_date, format: :short %></td>
                  <td><%= link_to 'Show', activity %></td>
                  <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
                  <td>
                    <% if activity.bill == nil %>
                      <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br>
      </div>
    </div>
  </div>
</section>
