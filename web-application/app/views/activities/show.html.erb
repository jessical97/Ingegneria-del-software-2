<!-- Show Activities Section -->
<section class="lateral-separator top-separator" id="contact">
  <div class="container">
    <h2 class="text-center">Activity</h2>
    <hr class="star-primary">
    <div class="row">
      <div class="col-lg-12 mx-auto">
        <% flash.each do |key, value| %>
          <div class="<%= flash_class(key) %>">
            <%= value %>
          </div>
        <% end %>

        <ul class="list-group">
          <li class="list-group-item">
            <p>
              <strong>Hours:</strong>
              <%= @activity.hours %>
            </p>
          </li>
          <li class="list-group-item">
            <p>
              <strong>Client:</strong>
              <%= @client_name %>
            </p>
          </li>
          <li class="list-group-item">
            <p>
              <strong>Registered At:</strong>
              <%= @activity.created_at %>
            </p>
          </li>
        </ul>

        <br>

        <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-primary btn-block"%>
        <%= link_to 'Back', activities_path, class: "btn btn-secondary btn-block" %>
      </div>
    </div>
  </div>
</section>
